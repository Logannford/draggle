generator client {
	provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum planType {
  FREE
  BASIC
  PREMIUM
}

// defines the user data model
model users {
  uid                                         String @id @default(uuid())
  email                                       String @unique
  hasAuthenticatedEmail                       Boolean @default(false) // if the user has authenticated their email
  firstName                                   String?
  lastName                                    String?

  subscription                                subscription?

  createdAt                                   DateTime @default(now())
  updatedAt                                   DateTime @updatedAt
  lastLogin                                   DateTime?
  websites                                    websites[]
}

model subscription {
  transactionId                               String @id @unique // Define transactionId as primary key
  subscriptionActive                          Boolean
  paymentEmail                                String
  planType                                    planType
  dateOfPurchase                              DateTime   // Change to DateTime
  dateOfExpiry                                DateTime   // Change to DateTime

  user                                        users      @relation(fields: [userId], references: [uid])
  userId                                      String     @unique

  numOfWebsites                               Int
}

model websites {
  websiteId                                   String @id
  
  owner                                       users @relation(fields: [userId], references: [uid])
  userId                                      String
  websiteName                                 String
  websiteUrl                                  String
  websiteLogo                                 String
  websitePrimaryColor                         String 
  websiteSecondaryColor                       String
  lastUpdated                                 DateTime @updatedAt
}

model earlyAccess {
  email                                      String @id 
  createdAt                                  DateTime @default(now())
  updatedAt                                  DateTime @updatedAt
}